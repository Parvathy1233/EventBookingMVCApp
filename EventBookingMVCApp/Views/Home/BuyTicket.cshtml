
@{
    ViewBag.Title = "BuyTicket";
}
<h2>Send Mail</h2>
<hr />
@if (ViewBag.msg != null)
{
    <div class="alert alert-success">@ViewBag.msg</div>
}
@using (Html.BeginForm("UserSave", "Home", FormMethod.Post))
{
    @*<form method="post" action="BuyTicket">*@
        <h2>Buy Ticket</h2>
        <label>Name</label>
        <input type="text" placeholder="name" name="name" />
        <br />
        <label>Mobile</label>
        <input type="text" placeholder="Mobile" name="mobile" />
        <br />
        <label>Number of Tickets</label>
        <input type="text" placeholder="tickets" name="tickets" />
        <br />
        <label>Email</label>
        <div class="input-group col-md-3">
            <input type="text" placeholder="useremail" name="email" class="form-control" />
            <div class="input-group-btn">
                <button class="btn btn-success" type="submit">
                    <i class="glyphicon glyphicon-send"></i>
                </button>

            </div>
        </div>
        <h4>@ViewBag.msg</h4>
 
<button type="submit">OK</button>
}
@using (Html.BeginForm("EventDisplay", "Home", FormMethod.Post))
{
    <button>Back</button>
}



